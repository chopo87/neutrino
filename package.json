{
  "name": "neutrino",
  "version": "1.0.1",
  "description": "Electron-Updater test project",
  "keywords": [
    "neutrino",
    "electron-updater"
  ],
  "license": "ISC",
  "author": "Aitzol CASADO-REMON",
  "type": "commonjs",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "electron .",
    "build": "electron-builder"
  },
  "repository": "https://github.com/chopo87/neutrino",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.chopo.lepton.neutrino",
    "productName": "Neutrino auto-updater",
    "win": {
      "target": ["msi", "nsis"],
      "icon": "src/resources/neutrino_256.ico"
    },
    "msi": {
      "oneClick": false,
      "perMachine": true
    },
    "nsis": {
      "perMachine": true,
      "installerHeaderIcon": "src/resources/neutrino_256.ico",
      "deleteAppDataOnUninstall": true
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
